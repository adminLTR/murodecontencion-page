# Configuración de la API de X (Twitter)
# Copia este archivo como .env y completa con tus credenciales

# Bearer Token (obligatorio para API v2)
TWITTER_BEARER_TOKEN=TU_BEARER_TOKEN_AQUI

# User ID de la cuenta de X a mostrar
TWITTER_USER_ID=TU_USER_ID_AQUI

# Puerto del servidor (opcional, por defecto 3000)
PORT=3000

# CORS - Orígenes permitidos (opcional, por defecto *)
# En producción, especifica tu dominio: https://tudominio.com
CORS_ORIGIN=*

# Cache TTL en minutos (opcional, por defecto 5)
# Tiempo que los tweets se almacenan en cache antes de solicitar nuevos
CACHE_TTL_MINUTES=5
